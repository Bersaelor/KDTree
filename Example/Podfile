source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

target 'KDTree_Example' do
    platform :ios, '8.0'
    
    pod 'KDTree', :path => '../'
#    pod 'XCGLogger', '~> 3.3'
    pod 'XCGLogger', :git => 'https://github.com/Bersaelor/XCGLogger.git', :branch => 'swift_2.3'
    
    target 'KDTree_Tests' do
        inherit! :search_paths
        
        pod 'Quick', '~> 0.9'
        pod 'Nimble', '~> 4.0'
    end
    
end


target 'KDTree_OSX_Example' do
    platform :osx, '10.10'

    pod 'KDTree', :path => '../'
#    pod 'XCGLogger', '~> 3.3'
    pod 'XCGLogger', :git => 'https://github.com/Bersaelor/XCGLogger.git', :branch => 'swift_2.3'
    
    target 'KDTree_OSX_ExampleTests' do
        inherit! :search_paths
    end
end

